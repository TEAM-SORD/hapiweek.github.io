mixin sidebar(endpoint)
	div(class="blog-sidebar")
		h4 Explore All Blogs
		div(class="sidebar-module")
			each post in postlist
				a(href="#{endpoint}?id="+post.id)
					li #{post.title} - #{post.date}

mixin loggedIn(loggedIn)
	if loggedIn 
		li
			a(href='logout') Log Out
	else 
		li
			a(href='login') Log In

mixin blogform(endpoint, method)
	if posts
		form(action=endpoint, method='#{method}')
			label(class='authorlabel') Author:
				input(class='author' type='text' name='author' value='#{posts[0].author}' required)
			label(class='titlelabel') Title:
				input(class='title' type='text' name='title' value='#{posts[0].title}' required)
			label(class='idlabel') Identifier:
				input(class='id' type='text' name='id' value='#{posts[0].id}' readonly)
			textarea(class='textarea' wrap='hard' name='text' required) #{posts[0].text}
			input(class='save' type='submit' value="Save" )
	if !posts
		form(action=endpoint, method='#{method}')
				label(class='authorlabel') Author:
					input(class='author' type='text' name='author' value='#{posts.author}' required)
				label(class='titlelabel') Title:
					input(class='title' type='text' name='title' value='#{posts.title}' required)
				label(class='idlabel') Identifier:
					input(class='id' type='text' name='id' value='' readonly)
				textarea(class='textarea' wrap='hard' name='text' required) #{posts.text}
				input(class='save' type='submit' value="Save")